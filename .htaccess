//Rewrite to www
Options +FollowSymLinks
RewriteEngine on
RewriteCond %{HTTP_HOST} ^verenzuela.com[nc]
RewriteRule ^(.*)$ http://www.verenzuela.com/$1 [r=301,nc]

//301 Redirect Old File
Redirect 301 verenzuela.com www.verenzuela.com

//Custom 400 errors
ErrorDocument 400 /error/404.html

//Custom 401 errors
ErrorDocument 401 /error/401.html

//Custom 403 errors
ErrorDocument 403 /error/403.html

//Custom 404 errors
ErrorDocument 404 /error/404.html

//Custom 500 errors
ErrorDocument 500 /error/500.html

//Change default directory page
DirectoryIndex /

//Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

//Prevent directory listings
Options All -Indexes